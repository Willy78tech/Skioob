<main class="sign-background-image">
    <% if (!!flashMessages.connect_msg) { %>
        <div class="alert alert-success">
            <%= flashMessages.connect_msg %>
        </div>
    <% }; %>
    <div id="connexion">
        <div class="container-fluid mt-5">
            <div class="row justify-content-center my-5">
                <div class="col-lg-4 col-md-6 col-8 bg-light bg-opacity-50 p-4 rounded text-center">
                    <h1 class="form-title">S'identifier</h1>
                    <form action="/login" method="post">
                        <div class="mb-3">
                            <label for="formInput" class="form-label"></label>
                            <input type="email" name="email" id="email" class="form-control" id="formInput" placeholder="Email">
                        </div>
                        <div class="mb-3">
                            <label for="formInput" class="form-label"></label>
                            <input type="password" name="password" id="password" class="form-control" id="formInput" placeholder="mot de passe">
                        </div>
                        <button type="submit" id="submit" class="btn btn-primary my-3 w-50 h-100">Se connecter</button>
                    </form>
                    <div class="form-link">
                        <p>Vous débutez sur SKIOOB ? <a href="/signup">S’inscrire</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
